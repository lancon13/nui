{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Chrome",
            "port": 9222,
            "request": "attach",
            "type": "chrome",
            "webRoot": "${workspaceFolder}/platforms/webapp"
        },
        {
            "name": "Dev: UI Storybook",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "--filter",
                "ui",
                "storybook:dev"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
    ]
}